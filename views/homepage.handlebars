{{#each posts as |post| }}
    <div class="card-container">
        <a class="card-link" href="/post/{{post.id}}"><div class="card-body">
            <h2 class="post-title">{{post.title}}</h2>
            <p class="post-data">posted by {{user.name}} on {{format_date post.date_created}}</p>
            <p class="post-body">{{post.bodyContent}}
            </p>
        </div></a>
    </div>
{{/each}}